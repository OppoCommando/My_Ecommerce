<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="310dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layoutDirection="ltr"
        android:background="@drawable/dialog_style"
        android:orientation="vertical"
        android:layout_marginTop="65dp"
        android:minWidth="310dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_gravity="center_horizontal"
            android:text="Delivery Pincode"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/enter_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Enter Your  Delivery Pincode"
                android:inputType="number"
                android:padding="10dp"
                android:maxLength="6"
                android:textColor="@color/black"
                android:textColorHint="@color/gradientLightYellow"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/colorPrimaryDark" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btncancel"
                android:textSize="12dp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@drawable/cancel_selection"
                android:layout_weight="1.0"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnsubmit"
                android:textSize="12dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_weight="1.0"
                android:background="@drawable/submit_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/myshop"
        android:layout_gravity="center_horizontal"
        android:layout_width="110dp"
        android:layout_height="110dp"
        tools:ignore="ContentDescription" />


</FrameLayout>
